<launch>
  <!-- 前视相机+IMU 模型 -->
  <arg name="model" default="$(find simple_rbt)/model/sensor/simple_front_cam_imu/model.sdf"/>

  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>
  <arg name="roll" default="0.0"/>
  <arg name="pitch" default="0.0"/>
  <arg name="yaw" default="0.0"/>

  <node name="spawn_simple_front_cam_imu" pkg="gazebo_ros" type="spawn_model"
        args="-file $(arg model) -sdf -model simple_front_cam_imu 
              -x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)"
        output="screen" />

</launch>
